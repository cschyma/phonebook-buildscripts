{
  "apiVersion": "v1",
  "metadata": {
    "namespace": "__NAMESPACE__",
    "labels": {
      "app": "__NAME__",
      "type": "buildpod",
      "stage": "pipeline"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "__NAME__",
        "image": "kube-registry:5000/__IMAGE__",
        "command": __CMD__,
        "volumeMounts": [{
          "mountPath": "/src",
          "name": "jenkins-workspace"
        }]
      }
    ],
    "volumes": [
      {
        "name":"jenkins-workspace",
        "persistentVolumeClaim": {
          "claimName": "pvc-__NAMESPACE__-jenkins-workspace"
        }
      }
    ]
  }
}
