{
  "apiVersion": "v1",
  "metadata": {
    "namespace": "__NS__",
    "labels": {
      "app": "__NAME__"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "__NAME__",
        "image": "kube-registry.kube-system.svc.cluster.local:5000/__IMAGE__",
        "args": __CMD__,
        "volumeMounts": [{
          "mountPath": "/src",
          "name": "jenkins-workspace"
        }]
      }
    ],
    "volumes": [
      {
        "name":"jenkins-workspace",
        "persistentVolumeClaim": {
          "claimName": "pvc-__NS__-jenkins-workspace"
        }
      }
    ]
  }
}
